{
  "version": 2,
  "installCommand": "npm install && npm install ../shared",
  "buildCommand": "npm run build --prefix ../shared && tsc && cp -r src/generated dist/",
  "functions": {
    "api/[...slug].js": {
      "runtime": "@vercel/node@20"
    }
  },
  "routes": [{ "src": "/api/(.*)", "dest": "/api/[...slug].js" }]
}
